include pug/head
include pug/common/mixins/header

doctype html
html(lang="ru")
    +head('Главная')
    body
        .wrapper
            +header([{link:'#about', content:'О нас'},
                {link:'services.html', content:'Расписание и оплата'},
                {link:'#tech', content:'Мероприятия'},
                {link:'content.html', content:'Экзамены'},
                {link:'#tech', content:'Обучение в испании'},
                {link:'#tech', content:'Новости'},
                {link:'#tech', content:'Фотогалерея'},
                {link:'contacts.html', content:'Контакты'},
                {link:'#tech', content:'Отзывы'},])
            main.main
                .contact.container
                    .breadcrumbs
                        a.breadcrumbs__item(href="index.html") Главная
                        a.breadcrumbs__item Контакты
                    .map
                        picture
                            source(srcset="img/map.webp" type="image/webp")
                            img.cover(src="img/map" alt="карта")
                    .contact__content
                        .contact__item
                            .contact__item-title Режим работы
                            .contact__item-text
                                p ПН-СБ - С 11:00 ДО 20:00
                                p ВС. - НЕ РАБОЧИЙ ДЕНЬ
                        .contact__item.contact__item_schedule
                            .contact__item-title Расписание директора
                            .contact-location Лиговский пр. 133 Е
                            ul.contact__list.list
                                li.li Вторник 14:00-17:00, 18:30-20:00
                                li.li Среда 14:00-20:00 
                                li.li Четверг 14:00-20:00 
                                li.li Пятница 15:00-17:00, 18:30-20:00 
                                li.li Суббота 15:00-18:30 
                                li.li Воскресенье - выходной день
                        .contact__item.contact__item_numbers
                            .contact__item-title Телефоны
                            .contact__item-text
                                p 
                                    a(href="tel:+78121234567") +7 (812) 123-45-67
                                p 
                                    a(href="tel:+78121234567") +7 (911) 123-45-67
                        .contact__item.contact__item_emails
                            .contact__item-title E-mail
                            p Основная почта
                            a(href="mailto:LAVITA_SCHOOL@GMAIL.COM").contact__mail LAVITA_SCHOOL@GMAIL.COM 
                            p Почта по вопросам экзаменов MSK
                            a(href="mailto:LAVITA_MSK@gmail.com").contact__mail LAVITA_MSK@gmail.com 
                            p Почта по вопросам экзаменов OPT
                            a(href="mailto:LAVITA_OPT@gmail.com").contact__mail LAVITA_OPT@gmail.com 



            include pug/footer
        <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
        script(src="js/app.min.js")
       

        